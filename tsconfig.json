    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop" : true,
    "declaration": true,
    "baseUrl": "src/",
    "outDir": "dist"
