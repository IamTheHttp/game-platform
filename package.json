{
  "name": "game-platform",
  "version": "2.0.0",
  "description": "Common utility for Canvas games",
  "keywords": [
    "game",
    "html5 games",
    "game platform",
    "game engine",
    "game canvas"
  ],
  "scripts": {
    "rollup": "tsc && rollup -c",
    "init": "npm install && jarb init",
    "start": "jarb devServer --env=develop",
    "build": "npm run rollup",
    "analyze": "jarb analyze --analyzeBundle=1",
    "test": "jarb test --coverage",
    "tdd": "jarb test",
    "releasePatch": "release-it",
    "releaseMinor": "release-it minor",
    "releaseMajor": "release-it major",
    "release": "jarb release"
  },
  "peerDependencies": {
    "react": "16.8.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.8.3",
    "jarb": "3.0.8",
    "jest-canvas-mock": "^2.1.1",
    "regenerator-runtime": "^0.13.3"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "dist/build.js",
  "module": "dist/build.js",
  "dependencies": {
    "@rollup/plugin-image": "^2.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/jest": "^25.1.2",
    "canvas": "2.6.0",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "rollup": "^2.55.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "types": "./dist/index.d.ts"
}
