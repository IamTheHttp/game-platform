{
  "name": "game-platform",
  "version": "2.0.0",
  "description": "Common utility for Canvas games",
  "keywords": [
    "game",
    "html5 games",
    "game platform",
    "game engine",
    "game canvas"
  ],
  "scripts": {
    "rollup": "rollup -c",
    "init": "npm install && jarb init",
    "start": "jarb devServer --env=develop",
    "build": "tsc && npm run rollup",
    "analyze": "jarb analyze --analyzeBundle=1",
    "test": "jest --coverage",
    "tdd": "jest --watch",
    "releasePatch": "release-it",
    "releaseMinor": "release-it minor",
    "releaseMajor": "release-it major",
    "release": "jarb release"
  },
  "peerDependencies": {
    "react": "16.8.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.8.3",
    "jarb": "3.0.8",
    "jest-canvas-mock": "^2.1.1",
    "regenerator-runtime": "^0.13.3"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "dist/build.js",
  "module": "dist/build.js",
  "dependencies": {
    "@babel/preset-env": "^7.14.8",
    "@babel/runtime": "^7.14.8",
    "@rollup/plugin-image": "^2.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "canvas": "2.6.0",
    "jest": "^27.0.6",
    "react": "16.8.2",
    "react-dom": "16.8.2",
    "rollup": "^2.55.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "types": "./dist/index.d.ts"
}
